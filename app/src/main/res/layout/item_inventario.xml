<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/invFoto"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/invNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:maxEms="6"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/invFoto"
            android:layout_toEndOf="@+id/invFoto"
            tools:text= "dadawdawdwd" />

        <TextView
            android:id="@+id/invDescipcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/invNombre"
            android:layout_toRightOf="@+id/invFoto"
            android:layout_toEndOf="@+id/invFoto"
            android:layout_marginTop="5dp"
            android:maxEms="6"
            tools:text = "wdawdadadssaddsadsads"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/invPrecioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                tools:text="Precio:" />

            <TextView
                android:id="@+id/invPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:maxEms="4"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="$9999.99"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>