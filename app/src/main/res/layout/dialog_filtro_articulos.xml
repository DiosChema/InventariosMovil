<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_button_bluelight">

        <CheckBox
            android:id="@+id/checkBoxFamilia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dialogFiltroArticulosFamiliaSpinner"
            android:layout_alignBottom="@+id/dialogFiltroArticulosFamiliaSpinner" />

        <Spinner
            android:id="@+id/dialogFiltroArticulosFamiliaSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="34dp"
            android:theme="@style/mySpinnerItemStyle"
            android:spinnerMode="dropdown"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/round_button_white"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <CheckBox
            android:id="@+id/checkBoxSubFamilia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dialogFiltroArticulosSubFamiliaSpinner"
            android:layout_alignBottom="@+id/dialogFiltroArticulosSubFamiliaSpinner" />

        <Spinner
            android:id="@+id/dialogFiltroArticulosSubFamiliaSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="34dp"
            android:spinnerMode="dropdown"
            android:theme="@style/mySpinnerItemStyle"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/round_button_white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/dialogFiltroArticulosFamiliaSpinner"/>

        <TextView
            android:id="@+id/dialogFiltroCantidadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@+id/dialogFiltroArticulosSubFamiliaSpinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/dialog_filtro_cantidad" />

        <EditText
            android:id="@+id/dialogFiltroCantidadMinimo"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_white"
            android:fontFamily="@font/open_sans"
            android:hint="@string/dialog_filtro_minimo_diminutivo"
            android:maxEms="6"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:inputType="number"
            android:gravity="center"
            android:layout_alignTop="@+id/dialogFiltroCantidadSeparador"
            android:layout_toStartOf="@+id/dialogFiltroCantidadSeparador"
            android:layout_toLeftOf="@+id/dialogFiltroCantidadSeparador"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/dialogFiltroCantidadSeparador"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/dialogFiltroCantidadText"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dialogFiltroCantidadMaximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_white"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:inputType="number"
            android:hint="@string/dialog_filtro_maximo_diminutivo"
            android:maxEms="6"
            android:minWidth="100dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_alignTop="@+id/dialogFiltroCantidadSeparador"
            android:layout_toEndOf="@+id/dialogFiltroCantidadSeparador"
            android:layout_toRightOf="@+id/dialogFiltroCantidadSeparador"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:id="@+id/invBottonTomarCodigo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@+id/dialogFiltroCantidadSeparador"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/restart"
            android:background="@color/light_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invBottonTomarCodigo"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialogFiltroArticulosCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/round_button_white"
                android:minWidth="1200dp"
                android:text="@string/dialog_cancelar" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/dialogFiltroArticulosAceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="6"
                android:background="@drawable/round_button_white"
                android:minWidth="120dp"
                android:text="@string/dialog_aceptar" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>