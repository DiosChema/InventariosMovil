<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Empleados"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue">

        <ImageButton
            android:id="@+id/perfilAgregarBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/abc_vector_test"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/ventaDetalleTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"
            android:text="@string/empleados_titulo"/>

        <ImageView
            android:id="@+id/perfilAgregarEmpleado"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_new_user"
            app:civ_border_width="2dp"
            app:civ_border_color="#ebece7"
            app:tint="#FFFFFF"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/perfilAgregarFiltro"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_search"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            app:tint="@color/white"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEmpleados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>



</LinearLayout>