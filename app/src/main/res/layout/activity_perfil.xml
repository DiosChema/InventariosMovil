<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Empleados"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:text="@string/empleados_titulo"/>

        <ImageButton
            android:id="@+id/perfilAgregarFiltro"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_filtro"
            android:contentDescription="@string/botonCancelar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@drawable/circleborder"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="400dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">

            <ImageView
                android:id="@+id/perfilAgregarEmpleado"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/ventanaVenta"
                android:src="@drawable/icon_newuser" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEmpleados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>