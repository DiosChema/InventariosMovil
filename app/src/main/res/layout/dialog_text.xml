<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_button_bluelight"
    android:minWidth="800dp">

    <TextView
        android:id="@+id/dialogTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/dialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:inputType="number"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:background="@drawable/round_button_white"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:hint="@string/dialog_texto"
        android:importantForAutofill="no"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp">

        <Button
            android:id="@+id/dialogCancelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_white"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:text="@string/dialog_cancelar" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dialogAceptar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:background="@drawable/round_button_white"
            android:text="@string/dialog_aceptar" />

    </LinearLayout>


</LinearLayout>