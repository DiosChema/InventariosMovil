<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Menu"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Tienda"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/logopocketsale"
            android:adjustViewBounds="true"
            android:background= "@color/transparent"
            android:contentDescription="@string/imagenArticulo"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/border_menu"
                android:layout_marginTop="1dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/menuSales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/ventanaVenta"
                        android:src="@drawable/img_bolsa_compra"
                        app:tint="#FF6961"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_ventas"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                </LinearLayout>



                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_menu"
                    android:layout_marginTop="1dp">
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/menuInventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/ventanaVenta"
                        android:src="@drawable/inventario"
                        app:tint="#957DAD"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_inventario"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_menu"
                    android:layout_marginTop="1dp">
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/menuAssortment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/ventanaVenta"
                        android:src="@drawable/repartidor"
                        app:tint="#7FB5B5"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/surtido_proveedor"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/border_menu"
                android:layout_marginTop="1dp">
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/menuStatisticsInventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/ventanaVenta"
                        android:src="@drawable/icon_menu_statistics"
                        app:tint="#8D9E75"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/menu_statistics"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                </LinearLayout>



                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_menu"
                    android:layout_marginTop="1dp">
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/statisticsItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/ventanaVenta"
                        android:src="@drawable/ganador"
                        app:tint="#AFD4A7"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/menu_best_sell"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1"/>

                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_menu"
                    android:layout_marginTop="1dp">
                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/menuLoss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/ventanaVenta"
                        android:src="@drawable/icon_trash"
                        app:tint="#4E82C2"
                        android:layout_marginLeft="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/loss_title"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/border_menu"
                android:layout_marginTop="1dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

