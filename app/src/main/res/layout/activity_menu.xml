<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Menu">

    <Button
        android:id="@+id/Venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:text="Venta" />

    <Button
        android:id="@+id/Inventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Venta"
        android:layout_alignLeft="@+id/Venta"
        android:layout_alignEnd="@+id/Venta"
        android:layout_alignRight="@+id/Venta"
        android:layout_alignBottom="@+id/Venta"
        android:layout_marginBottom="-180dp"
        android:text="Inventario" />

</RelativeLayout>