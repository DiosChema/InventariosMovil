<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Menu"
    android:background="@color/white"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Venta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/carticon"
            android:background="@drawable/round_button_bluelight"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/ventanaVenta" />

        <ImageView
            android:id="@+id/Inventario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/inventoryicon"
            android:background="@drawable/round_button_blue"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/imagenInventarioVentas"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/estadistica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/arrowgraphic"
            android:background="@drawable/round_button_blue"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/imagenArticulosMasVendidos"/>

        <ImageView
            android:id="@+id/estadistica2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/graphicicon"
            android:background="@drawable/round_button_bluelight"
            android:adjustViewBounds="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/ventanaGraficas"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/estadistica3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/ventanaSurtido"/>

        <ImageView
            android:id="@+id/estadistica4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/handcart"
            android:background="@drawable/round_button_blue"
            android:contentDescription="@string/ventanaSurtido"/>


    </LinearLayout>


</LinearLayout>