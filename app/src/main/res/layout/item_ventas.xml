<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/ventasFragmentNumeroVentaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:maxEms="5"
            android:layout_alignParentTop="true"
            tools:text= "Venta No." />

        <TextView
            android:id="@+id/ventasFragmentNumeroVenta"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ventasFragmentNumeroVentaText"
            android:layout_alignStart="@+id/ventasFragmentNumeroVentaText"
            android:layout_alignLeft="@+id/ventasFragmentNumeroVentaText"
            android:layout_alignEnd="@+id/ventasFragmentNumeroVentaText"
            android:layout_alignRight="@+id/ventasFragmentNumeroVentaText"
            android:maxEms="5"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:text="#####"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/ventasFragmentFecha"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            tools:text="Fecha" />

        <TextView
            android:id="@+id/ventasFragmentTotalVenta"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ventasFragmentFecha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:maxEms="7"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="Total: $999999"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ventasFragmentRecyclerViewArticulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ventasFragmentNumeroVenta"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/ventasFragmentBotonEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ventasFragmentTotalVenta"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@android:drawable/ic_menu_edit"/>

    </RelativeLayout>
</LinearLayout>