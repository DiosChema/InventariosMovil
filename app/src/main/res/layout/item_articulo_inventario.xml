<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemArticuloInventarioContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/backgroundventa1"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemArticuloVentaCardView"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="400dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/itemArticuloInventarioFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:adjustViewBounds="true"
            android:background= "@color/transparent"
            android:contentDescription="@string/imagenArticulo" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemArticuloInventarioNombre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                tools:text= "dadawdawdwd"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".2"/>

            <TextView
                android:id="@+id/itemArticuloInventarioDescipcion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="1"
                tools:text= "dadawdawdwd"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"/>

                <TextView
                    android:id="@+id/itemArticuloInventarioCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:maxLines="1"
                    tools:text= "Cantidad"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/itemArticuloInventarioPrecioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/venta_precio_articulo"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/itemArticuloInventarioPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxEms="6"
                tools:text = "$$$"/>

        </LinearLayout>




    </LinearLayout>

