<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:id="@+id/itemArticuloInventarioContenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backgroundventa1">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="400dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/itemArticuloInventarioFoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/waiticon"
                android:adjustViewBounds="true"
                android:background= "@color/transparent"
                android:contentDescription="@string/imagenArticulo"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/itemArticuloInventarioNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="2"
                android:textSize="20sp"
                tools:text="dadawdawdwd" />

            <TextView
                android:id="@+id/itemArticuloInventarioDescipcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:maxLines="3"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                tools:text = "wdawdadadssaddsadsads"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemArticuloInventarioPrecioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                tools:text="Precio:"/>

            <TextView
                android:id="@+id/itemArticuloInventarioPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:minWidth="90dp"
                android:layout_marginBottom="3dp"
                android:text="@string/ventas_inventario_cantidad"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/itemArticuloInventarioCantidadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Precio:"/>

            <TextView
                android:id="@+id/itemArticuloInventarioCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:minWidth="90dp"
                android:layout_marginBottom="5dp"
                android:text="@string/ventas_inventario_cantidad"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>