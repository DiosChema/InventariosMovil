<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Surtido"
    android:orientation="vertical"
    android:background="@drawable/background">

    <Button
        android:id="@+id/surtidoConfirmarArticulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/round_button_red"
        android:text="@string/surtido_confirmar"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"/>

    <!--
    <ListView
        android:id="@+id/surtidoListView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_margin="15dp"/>
    -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/surtidoListView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_margin="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/VentaObtenerCodigo1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            app:srcCompat="@android:drawable/ic_search_category_default"
            android:background="@color/transparent"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/surtidoAgregarCodigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:background="@drawable/round_button_green"
            android:text="@string/surtido_boton_agregar"
            android:layout_gravity="center"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/VentaObtenerCodigo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:background="@color/transparent"
            android:layout_gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>



</LinearLayout>