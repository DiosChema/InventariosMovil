<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MenuStatistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



            <ImageView
                android:id="@+id/menuStatisticsStore"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/logopocketsale"
                android:adjustViewBounds="true"
                android:background= "@color/transparent"
                android:contentDescription="@string/imagenArticulo"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menuStatisticsItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ganador"
                    android:background="@drawable/round_button_blue"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/imagenArticulosMasVendidos"/>

                <ImageView
                    android:id="@+id/menuStatisticsInventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_estadisticas"
                    android:background="@drawable/round_button_bluelight"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/ventanaGraficas"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonMenuStatisticsNoSells"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_button_bluelight"
                    android:contentDescription="@string/ventanaVenta"
                    android:src="@drawable/icon_statistics_old_items" />

                <ImageView
                    android:id="@+id/menuStatisticsNew2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_button_blue"
                    android:contentDescription="@string/ventanaVenta"
                    android:src="@drawable/icon_employees"
                    android:visibility="invisible"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>