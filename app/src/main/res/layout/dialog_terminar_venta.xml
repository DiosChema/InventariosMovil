<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_button_bluelight"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="8dp">


    <!--<TextView
        android:id="@+id/dialogTerminarVentaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>-->

    <TextView
        android:id="@+id/dialogTotalVentaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/venta_total_venta"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dialogTotalVenta"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:minLines="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_button_white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialogTotalPagoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mensaje_venta_pago"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/dialogTotalPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:minLines="2"
            android:text=""
            android:hint="@string/venta_total_payment"
            android:inputType="number"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="@drawable/round_button_white"
            android:gravity="center_horizontal"
            android:importantForAutofill="no" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialogTotalCambioText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mensaje_venta_cambio"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dialogTotalCambio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:minLines="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_button_white"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <Button
            android:id="@+id/dialogTerminarVentaCancelar"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/round_button_white"
            android:text="@string/dialog_cancelar"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/dialogTerminarVentaAceptar"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/round_button_white"
            android:text="@string/dialog_aceptar"/>

    </LinearLayout>

</LinearLayout>