<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/loginHelp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_question"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logopocketsale"
            android:adjustViewBounds="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/imagenAplicacion" />

        <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:drawableStart="@drawable/mailicon"
                android:drawableLeft="@drawable/mailicon"
                android:drawablePadding="5dp"
                android:fontFamily="@font/open_sans"
                android:hint="@string/mensaje_correo_electronico"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/loginPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/padlockicon"
                    android:drawableStart="@drawable/padlockicon"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:textSize="25sp"
                    android:hint="@string/mensaje_correo_contrasenia"
                    android:importantForAutofill="no" />

                <ImageButton
                    android:id="@+id/loginPasswordButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/eyeicon"
                    android:adjustViewBounds="true"
                    android:background="@color/transparent"
                    android:contentDescription="@string/ocultar_contrasena" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/loginBotonIniciarSesion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans"
                    android:background="@drawable/round_button_bluelight"
                    android:text="@string/boton_iniciar_sesion" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/loginTextPasswordOlvidada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="@string/boton_olvidaste_contraseÃ±a" />

            <TextView
                android:id="@+id/loginTextNuevaCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/boton_crear_cuenta" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

