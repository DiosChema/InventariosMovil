<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:background="@color/background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/mensaje_titulo_login"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="40dp"
            android:background="@drawable/round_layout">

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/mailicon"
                android:drawableStart="@drawable/mailicon"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="25dp"
                android:textSize="25sp"
                android:inputType="textEmailAddress"
                android:hint="@string/mensaje_correo_electronico"/>

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginEmail"
                android:layout_alignStart="@+id/loginEmail"
                android:layout_alignLeft="@+id/loginEmail"
                android:layout_alignEnd="@+id/loginEmail"
                android:layout_alignRight="@+id/loginEmail"
                android:drawableLeft="@drawable/padlockicon"
                android:drawableStart="@drawable/padlockicon"
                android:drawablePadding="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="25sp"
                android:hint="@string/mensaje_correo_contrasenia"/>

            <ImageButton
                android:id="@+id/loginPasswordButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/loginPassword"
                android:layout_alignBottom="@+id/loginPassword"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/eyeicon"
                android:background="@color/white"/>


            <Button
                android:id="@+id/loginBotonIniciarSesion"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:text="@string/boton_iniciar_sesion" />

            <TextView
                android:id="@+id/loginTextPasswordOlvidada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginBotonIniciarSesion"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/boton_olvidaste_contraseÃ±a" />

            <TextView
                android:id="@+id/loginTextNuevaCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginTextPasswordOlvidada"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="@string/boton_crear_cuenta" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>

