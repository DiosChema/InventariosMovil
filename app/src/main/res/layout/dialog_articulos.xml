<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/round_button_bluelight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dialogArticulosCamara"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/barcodeicon"
                android:contentDescription="@string/botonCancelar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/dialog_lista_articulos"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="3dp"/>

            <ImageButton
                android:id="@+id/dialogArticulosFiltro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/icono_filtro"
                android:contentDescription="@string/botonCancelar" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialogoArticulosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@drawable/round_button_bluelight"
        android:layout_marginTop="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialogoArticulosRecyclerViewLista"
            android:layout_width="match_parent"
            android:layout_height="110dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/dialogArticulosSalir"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button_red"
                app:srcCompat="@drawable/cancelicon"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/botonCancelar" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/dialogArticulosAceptar"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/check_icon"
                android:adjustViewBounds="true"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/round_button_blue"
                android:contentDescription="@string/botonCancelar"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
