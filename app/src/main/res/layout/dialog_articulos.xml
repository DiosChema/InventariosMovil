<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialogArticulosContenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Spinner
                android:id="@+id/dialogArticulosFamiliaSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageButton
                android:id="@+id/dialogArticulosFamiliaSpinnerButton"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_marginLeft="-25dp"
                android:layout_marginStart="-25dp"
                app:srcCompat="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Spinner
                android:id="@+id/dialogArticulosSubFamiliaSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageButton
                android:id="@+id/dialogArticulosSubFamiliaSpinnerButton"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:background="@color/white"
                android:layout_marginLeft="-25dp"
                android:layout_marginStart="-25dp"
                app:srcCompat="@android:drawable/ic_menu_search" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialogoArticulosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogArticulosContenedor"
        android:layout_marginBottom="35dp"/>

    <ImageButton
        android:id="@+id/dialogArticulosSalir"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>