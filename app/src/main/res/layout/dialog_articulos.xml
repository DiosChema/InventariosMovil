<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_button_bluelight">

        <Spinner
            android:id="@+id/dialogArticulosFamiliaSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="34dp"
            android:theme="@style/mySpinnerItemStyle"
            android:spinnerMode="dropdown"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/round_button_white"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <Spinner
            android:id="@+id/dialogArticulosSubFamiliaSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="34dp"
            android:spinnerMode="dropdown"
            android:theme="@style/mySpinnerItemStyle"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/round_button_white"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/dialogArticulosFamiliaSpinner"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialogoArticulosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogArticulosSubFamiliaSpinner"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"/>

        <ImageButton
            android:id="@+id/dialogArticulosSalir"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_button_red"
            app:srcCompat="@drawable/cancelicon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/botonCancelar" />
    </RelativeLayout>
</RelativeLayout>